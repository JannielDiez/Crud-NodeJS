<div class="container p-4">
    <div class="row">        
        <div class="col-md-3 mb-3">
                    <div class="card text-center h-100">
                <div class="card-body ">
                    <br>
                    <p class="m-2">Añadir empleado</p>
                    <br>
                    <a style="display:block; magin:0 auto;" href="/add/" class="btn btn-primary">Añadir</a>
                </div>
            </div>
            </div>
            {{#if mensaje>0}}
        <div class="container">
            <div class="alert alert-info" role="alert">
                {{mensaje}}
            </div>
        </div>
        {{/if}}
        {{#each links}}
           <div class="col-md-3 mb-3">
               <div class="card text-center h-100">
                   <div class="card-body">
                        <p class="m-2"> {{id}}</p>
                        <p class="m-2"> {{nombre}}</p>
                       <p class="m-2"> {{salario}}</p>
                      <a href="/delete/{{id}}" class="btn btn-danger" >Borrar</a>
                      <a href="/edit/{{id}}" class="btn btn-secondary">Editar</a> 

                   </div>
               </div>
           </div>
           {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay registros en La Tabla</p>
                    <a href="/links/add">Crear un empleado</a>
                </div>
            </div>
        {{/each}}

    </div>
</div>